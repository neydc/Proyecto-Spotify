
@{
    Layout = null;
}

<html>
<head>
    <title>SpotifyPro-Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        strong {
            color: rgba(255, 0, 0, 0.72);
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <img src="~/Img/logo.PNG" />
                </div>
            </div>
        </div>
    </div>
    <hr />
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-lg-4">

            </div>
            <div class="col-lg-4">
                <form action="/Auth/Login" method="post">
                    <label>Usuario</label>
                    <input class="form-control" name="Nickname" autofocus value="@ViewBag.Nickanam " required/>
                    <strong>@Html.ValidationMessage("Nickname2")</strong>
                    <br />
                    <label>Contraseña</label>
                    <input class="form-control" name="Password" type="password" value="@ViewBag.Pass" required/>
                    <strong>@Html.ValidationMessage("Password2")</strong>
                    <br />
                    <strong>@Html.ValidationMessage("Error")</strong>
                    <br />
                    <button class="btn btn-success">Iniciar Sesión</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
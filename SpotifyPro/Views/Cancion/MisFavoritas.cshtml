
@{
    ViewData["Title"] = "MisFavoritas";
    Layout = "~/Views/Shared/IndexPrinciapl.cshtml";
}

<h1>Canciones que te gustan</h1>

<a href="~/Usuario/Index"><i class='far fa-arrow-alt-circle-left' style='font-size:36px;color:white'></i></a>
<br />
<script src='https://kit.fontawesome.com/a076d05399.js'></script>
<br />
<div class="container">
   
</div>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th style="font-size:24px"></th>
            <th style="font-size:24px">Nombre</th>
            <th style="font-size:24px">--------Play------</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td style="font-size:18px"><i class='fas fa-play-circle' style='font-size:48px;color:limegreen'></i></td>
            <td style="font-size:18px"><i class='fas fa-music' style='font-size:40px;color:white;width:15px'></i></td>
            <td style="font-size:18px">@item.Cancion.Nombre</td>
        </tr>
        }
    </tbody>
</table>
